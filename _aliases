## create a directory and cd into it
md() { mkdir -p "$@" && cd "$@"; }

## .. 4 ; go 4 directories up
function .. () {
    local arg=${1:-1};
    local dir=""
    while [ $arg -gt 0 ]; do
        dir="../$dir"
        arg=$(($arg - 1));
    done
    cd $dir #>&/dev/null
}

function gi() {
    curl https://www.gitignore.io/api/$@;
}

