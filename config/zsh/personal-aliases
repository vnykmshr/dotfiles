#!/usr/bin/env zsh

# Personal aliases based on actual shell usage patterns

# =============================================================================
# Your Most Used Git Workflows (Based on History Analysis)
# =============================================================================

# Your current aliases (keeping them)
alias gst='git status'
alias lg='git log --oneline --graph --decorate'

# Enhanced git workflow aliases based on your patterns
alias gs='git status --short --branch'
alias gd='git diff'
alias ga='git add'
alias gau='git add -u'  # You use this A LOT
alias gc='git commit'
alias gcm='git commit -m'
alias gp='git push'
alias glog='git log'
alias gco='git checkout'

# Git workflow combinations you use frequently
alias gac='git add -u && git commit'  # Combine your ga + gc pattern
alias gacp='git add -u && git commit && git push'  # Your full workflow
alias gdiff='git diff --color-words'  # Better diff for code review

# =============================================================================
# Development Workflow (Make Commands)
# =============================================================================

# You use 'make dev' constantly - add shortcuts
alias md='make dev'
alias mb='make build'
alias mc='make check'
alias mt='make test'
alias mr='make run'
alias ma='make audit'

# Combined make commands you use
alias mbt='make build && make test'
alias mbr='make build && make run'
alias mcd='make check && make dev'

# =============================================================================
# Brew Management (brewski pattern)
# =============================================================================

# Your brewski alias seems to update brew - enhance it
alias brewski='brew update && brew upgrade && brew cleanup'
alias brewinfo='brew info'
alias brewsearch='brew search'
alias brewlist='brew list'
alias brewdeps='brew deps --tree'

# =============================================================================
# Project Navigation (Based on workspace structure)
# =============================================================================

# Quick navigation to your common directories
alias workspace='cd ~/workspace'
alias github='cd ~/workspace/github'
alias bitbucket='cd ~/workspace/bitbucket'
alias projects='cd ~/workspace/projects'
alias dotfiles='cd ~/.dotfiles'

# =============================================================================
# Development Server Patterns
# =============================================================================

# Node.js shortcuts (you run node app.js frequently)
alias nodemon='npx nodemon'
alias nodeserve='node app.js'  # Renamed to avoid conflict with serve alias
alias nodedev='NODE_ENV=development node app.js'
alias nodeprod='NODE_ENV=production node app.js'

# Go development shortcuts
alias gor='go run'
alias gob='go build'
alias got='go test'
alias gomt='go mod tidy'  # You use this often
alias gomi='go mod init'

# =============================================================================
# Flutter Development
# =============================================================================

# Flutter shortcuts (you use flutter run -d macos)
alias fl='flutter'
alias flr='flutter run'
alias flrm='flutter run -d macos'
alias flc='flutter clean'
alias flb='flutter build'
alias flt='flutter test'

# =============================================================================
# System Monitoring (htop usage)
# =============================================================================

# Process management shortcuts
alias processes='ps aux | grep -v grep | grep'
alias ports='lsof -i'
alias listening='lsof -i -P | grep LISTEN'

# =============================================================================
# Custom Command Enhancements
# =============================================================================

# ccusage daily - seems like a personal tracker
alias cc='ccusage'
alias ccd='ccusage daily'

# Claude usage pattern
alias claude-todo='claude --dangerously-skip-permissions "/todo-branch"'
alias claude-safe='claude'

# =============================================================================
# File Operations (Based on your mv/cp patterns)
# =============================================================================

# Quick file operations you seem to do
alias downloads='cd ~/Downloads'
alias public='cd public'
alias articles='cd articles'

# =============================================================================
# Network & Connectivity
# =============================================================================

# Ping shortcuts (you ping google.com often)
alias pgg='ping google.com'
alias p8='ping 8.8.8.8'
alias pf='ping -c 5'  # Fast ping

# =============================================================================
# Quick Navigation Shortcuts
# =============================================================================

# Super quick shortcuts for frequently used paths
alias ws='workspace'
alias proj='cd ~/workspace/projects'
alias wh='workflow-helper'

# Environment shortcuts (you switch environments often)
alias dev='export NODE_ENV=development GIN_MODE=debug ENVIRONMENT=development; echo "Environment set to development"'
alias prod='export NODE_ENV=production GIN_MODE=release ENVIRONMENT=production; echo "Environment set to production"'

# Enhanced git status (more informative than plain git status)
alias gst='git status --short --branch'  # Override basic gst with enhanced version

# Git workflow shortcuts
alias gup='git pull && git submodule update --init --recursive'
alias gcl='git clean -fd && git reset --hard'

# =============================================================================
# System Monitoring (You use htop 36 times)
# =============================================================================

alias cpu='htop --sort-key PERCENT_CPU'
alias mem='htop --sort-key PERCENT_MEM'
alias proc='ps aux | grep -v grep | grep -i'

# =============================================================================
# Enhanced ls (you use ls 135 times)
# =============================================================================

# Make ls more informative by default
alias l='ls -lah'
alias la='ls -la'
alias ll='ls -l'
alias tree='tree -L 2'  # Limited depth tree

# =============================================================================
# Archive & File Management
# =============================================================================

# You work with various file types - add extraction
alias untar='tar -xvf'
alias targz='tar -czvf'
alias tarx='tar -xzvf'