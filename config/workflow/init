# Workflow Automation Initialization
# Lightweight git workflow helpers (opt-in via DOTFILES_SKIP_WORKFLOW)

# Skip if disabled
[[ "$DOTFILES_SKIP_WORKFLOW" == "1" ]] && return 0

# Get the directory where this script is located
local workflow_dir="${DOTFILES:-$HOME/.dotfiles}/config/workflow"

# Source workflow aliases (git helpers only)
if [[ -f "$workflow_dir/aliases" ]]; then
    source "$workflow_dir/aliases"
fi

# Workflow status check function
workflow_check() {
    echo "Workflow Tools Status"
    echo "===================="

    if [[ -x "$workflow_dir/git-helpers" ]]; then
        echo "✓ git-helpers (Enhanced git workflow operations)"
        echo ""
        echo "Available commands:"
        echo "  gw              - Git workflow helpers"
        echo "  gws             - Git status with helpers"
    else
        echo "✗ No workflow tools found"
    fi
}

# Add helpful alias for the check function
alias workcheck='workflow_check'
