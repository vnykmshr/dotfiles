# Modern CLI Tool Aliases
# Enhanced replacements for common commands

# File listing with eza (better ls)
if command -v eza >/dev/null 2>&1; then
    alias ls='eza --color=auto --group-directories-first'
    alias ll='eza -la --color=auto --group-directories-first --git'
    alias la='eza -la --color=auto --group-directories-first'
    alias lt='eza --tree --level=2 --color=auto'
    alias lta='eza --tree --level=2 --color=auto --all'
    alias ltg='eza --tree --level=2 --color=auto --git'
fi

# File viewing with bat (better cat)
if command -v bat >/dev/null 2>&1; then
    alias cat='bat --style=auto'
    alias less='bat --style=auto --paging=always'
    alias bathelp='bat --list-themes'
fi

# File searching with ripgrep (better grep)
if command -v rg >/dev/null 2>&1; then
    alias grep='rg --color=auto'
    alias rga='rg --no-ignore --hidden'
    alias rgf='rg --files'
fi

# File finding with fd (better find)
if command -v fd >/dev/null 2>&1; then
    alias find='fd'
    alias fda='fd --no-ignore --hidden'
    alias fdt='fd --type f'
    alias fdd='fd --type d'
fi

# Smart navigation with zoxide (better cd)
if command -v zoxide >/dev/null 2>&1; then
    eval "$(zoxide init zsh)"
    alias cd='z'
    alias cdi='zi'  # Interactive mode
    alias cdb='z -'  # Go back
fi

# Git enhancements
if command -v delta >/dev/null 2>&1; then
    # Delta is configured in git config, but add some useful aliases
    alias gdiff='git diff'
    alias gshow='git show'
    alias glog='git log --oneline --graph --decorate'
fi

# Fallback aliases for when tools aren't available
if ! command -v eza >/dev/null 2>&1; then
    alias ll='ls -la'
    alias la='ls -la'
    alias lt='tree -L 2 2>/dev/null || find . -maxdepth 2 -type d'
fi

if ! command -v bat >/dev/null 2>&1; then
    alias cat='cat'
fi

if ! command -v rg >/dev/null 2>&1; then
    alias grep='grep --color=auto'
fi

if ! command -v fd >/dev/null 2>&1; then
    alias find='find'
fi
