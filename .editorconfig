# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# https://editorconfig.org/

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Shell scripts
[*.{sh,bash,zsh}]
indent_size = 4
indent_style = space

# Makefiles require tabs
[Makefile]
indent_style = tab
indent_size = 4

[*.{make,mk}]
indent_style = tab
indent_size = 4

# YAML files (GitHub Actions, docker-compose, etc.)
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Lua files (Neovim config)
[*.lua]
indent_size = 4

# Git commit messages
[COMMIT_EDITMSG]
max_line_length = 72
